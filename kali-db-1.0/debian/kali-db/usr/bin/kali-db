#!/bin/bash
## by John Modica 
### @CybernetiX S3C
HEIGHT=15
WIDTH=40
CHOICE_HEIGHT=4
BACKTITLE="Kali Linux DB Update Menu"
TITLE="Kali Update Menu"
MENU="Choose one of the following options:"

OPTIONS=(1 "Update"
         2 "Upgrade"
         3 "Full Upgrade"
         4 "Edit Sources"
         5 "Quit")

CHOICE=$(dialog --clear \
                --backtitle "$BACKTITLE" \
                --title "$TITLE" \
                --menu "$MENU" \
                $HEIGHT $WIDTH $CHOICE_HEIGHT \
                "${OPTIONS[@]}" \
                2>&1 >/dev/tty)

clear
case $CHOICE in
        1)  
            echo "Updating";
            sleep 2 
            sudo apt update;
            sleep 1
            kali-db;
            ;;
        2)  
            echo "Upgrading Files";
            sleep 2
            sudo apt upgrade -y;
            sleep 1
            kali-db;
            ;;
        3)
            echo "Upgrading System";
            sleep 2
            sudo apt full-upgrade -y;
            sleep 1
            kali-db;
            ;;          
        4) echo "Editing Sources. Press CTRL + X to save edits.";
           sleep 2
           apt edit-sources;
           kali-db;
           ;;
        5)  
            echo "Done"
esac
 
